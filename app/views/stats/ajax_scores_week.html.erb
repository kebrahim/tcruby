<h4>Week <%= @week.number %></h4>
<form action=<%= "'/scores/week/" + @week.number.to_s + "'" %> method='post'>
  <p class='center'>
    <button class='btn btn-primary' name='updatescores'>Update Scores</button>&nbsp
    <button class='btn btn-inverse' name='setpicks'>Set Week <%= @week.number + 1 %> Picks</button>&nbsp
    <button class='btn' name='cancel'>Cancel</button>
  </p>

<div class='row-fluid'>
  <div class='span12 center'>
    <h5>Quickfire</h5>
    <div class='row-fluid'>
      <div class='span6 center noborderspan'>
        <h6>Individual</h6>
        <%= stat_chef_multi_selector("Winner", "Qi", @chefs) %><br/>
        <%= stat_chef_multi_selector("Top", "QTi", @chefs) %><br/>
        <%= stat_chef_multi_selector("Middle", "QMi", @chefs) %><br/>
        <%= stat_chef_multi_selector("Bottom", "QBi", @chefs) %>
      </div>
      <div class='span6 center noborderspan'>
        <h6>Team</h6>
        <%= stat_chef_multi_selector("Winner", "Qt", @chefs) %><br/>
        <%= stat_chef_multi_selector("Top", "QTt", @chefs) %><br/>
        <%= stat_chef_multi_selector("Middle", "QMt", @chefs) %><br/>
        <%= stat_chef_multi_selector("Bottom", "QBt", @chefs) %>
      </div>
    </div>
  </div>
 </div>

 <div class='row-fluid'>
  <div class='span12 center'>
    <h5>Elimination</h5>
    <div class='row-fluid'>
      <div class='span6 center noborderspan'>
        <h6>Individual</h6>
        <%= stat_chef_multi_selector("Winner", "W", @chefs) %><br/>
        <%= stat_chef_multi_selector("Top", "Ti", @chefs) %><br/>
        <%= stat_chef_multi_selector("Middle", "Mi", @chefs) %><br/>
        <%= stat_chef_multi_selector("Bottom", "Bi", @chefs) %>
      </div>
      <div class='span6 center noborderspan'>
        <h6>Team</h6>
        <%= stat_chef_multi_selector("Winner", "Wt", @chefs) %><br/>
        <%= stat_chef_multi_selector("Top", "Tt", @chefs) %><br/>
        <%= stat_chef_multi_selector("Middle", "Mt", @chefs) %><br/>
        <%= stat_chef_multi_selector("Bottom", "Bt", @chefs) %>
      </div>
    </div>
    <%= stat_chef_multi_selector("Eliminated", "E", @chefs) %><br/>    
  </div>
</div>

<div class='row-fluid'>
  <div class='span6 center'>
    <h5>Last Chance Kitchen</h5>
    <%= stat_chef_multi_selector("LCK Winner", "L", @chefs) %><br/>
    <%= stat_chef_multi_selector("LCK Loser", "X", @chefs) %>
  </div>
  <div class='span6 center'>
    <h5>Miscellaneous</h5>
    <%= stat_chef_multi_selector("Cut themselves", "C", @chefs) %>
  </div>
</div>
</form>

<script type="text/javascript">
  $(document).ready(function() {
    $('.multiselect').multiselect({
      maxHeight: 300,
      buttonWidth: '250px'
    });
  });
</script>