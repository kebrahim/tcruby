<h4>Week <%= @week.number %></h4>
<form action=<%= "'/picks/week/" + @week.number.to_s + "'" %> method='post'>
  <% 
    # Buttons only appear if it's current user's pick
    if @my_pick
  %>
    <p class='center'>
      <button class='btn btn-primary' name='updatepicks'>Make My Pick</button>&nbsp
      <button class='btn' name='cancel'>Cancel</button>
    </p>
  <% end %>

  <table class=<%= "'" + ApplicationHelper::TABLE_CLASS + "'" %>>
    <thead><tr>
      <th>Pick</th>
      <th>Team</th>
      <th colspan=2>Chef</th>
      <th>Win/Loss</th>
      <th>Bonus Points</th>
    </tr></thead>
    <% @picks.each { |pick| %>
      <tr>
        <td><%= pick.number.to_s %></td>
        <td><a href=<%= "'teams/" + pick.user.id.to_s + "'" %>><%= pick.user.full_name %></a></td>
        <% if @my_pick && pick.id == @current_pick.id %>
          <td class='tdselect' colspan=2><%= chef_selector(@chefs, nil, true, false) %></td>
          <td class='tdselect'><%= record_selector %></td>
        <% else %>
          <td><%= pick.chef ? "pic" : "" %></td>
          <td><%= pick.chef ? pick.chef.full_name : "" %></td>
          <td><%= pick.my_record_string %></td>
        <% end %>
        <td><%= pick.points.to_s %></td>
      </tr>
    <% } %>
  </table>
</form>